<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Study" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/back_top</item>
        <item name="colorPrimaryVariant">@color/back_top</item>
        <item name="colorOnPrimary">@color/btns</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/back_top</item>
        <item name="colorSecondaryVariant">@color/back_top</item>
        <item name="colorOnSecondary">@color/btns</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Study.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Study.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Study.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>